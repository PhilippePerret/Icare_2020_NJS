doctype html
html
  include admin/head
  body(class="admin")
    include admin/header
    //- Le message flash Ã  afficher (if any)
    if Dialog.hasMessages()
      div.flash
        != Dialog.getMessages()

    section#content
      case section
        when 'overview'
          include admin/section/overview
        when 'dashboard'
          include admin/section/dashboard
        when 'icariens'
          include admin/section/icariens
        when 'modules'
          include admin/section/modules
    include admin/footer
